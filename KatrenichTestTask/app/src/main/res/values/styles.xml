<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="PostStatisticsFragmentCardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="cardCornerRadius">5dp</item>
        <item name="cardElevation">3dp</item>x
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingTop">6dp</item>
    </style>

    <style name="RecyclerViewPicturesCardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_margin">3dp</item>
        <item name="cardCornerRadius">5dp</item>
        <item name="cardElevation">3dp</item>
        <item name="android:padding">2dp</item>
    </style>
    
    <style name="PostStatisticsFragmentBlockCaptionStyle" parent="android:Widget.TextView">
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>

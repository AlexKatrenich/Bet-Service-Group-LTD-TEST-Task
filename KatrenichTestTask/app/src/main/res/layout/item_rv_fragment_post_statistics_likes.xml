<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/RecyclerViewPicturesCardViewStyle">

        <ImageView
            android:id="@+id/iv_post_statistics_picture_rv_item"
            android:layout_width="@dimen/users_avatars_size_post_statistics_fragment"
            android:layout_height="@dimen/users_avatars_size_post_statistics_fragment"
            android:scaleType="fitCenter"
            tools:src="@drawable/picture_no_photo_aviable" />

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/tv_post_statistics_caption_rv_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-thin"
        android:textSize="10sp"
        tools:text="name" />

</LinearLayout>